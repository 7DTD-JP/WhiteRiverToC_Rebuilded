	<!-- Boss container -->
	<set xpath="/entity_classes/entity_class[@name='zombieSMGArlenePLUS']/property[@name='LootDropEntityClass']/@value">EntityLootContainer_WRCAmelias</set>
	<append xpath="/entity_classes">
		<!-- Taza's -->
		<!-- NG 08252023 -->
		<entity_class name="EntityLootContainer_WRCTazas">
			<property name="HideInSpawnMenu" value="true"/>
