<config>
	<!-- DEBUG USE -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/property[starts-with(@name, 'ItemsOnEnterGame')]/@value">gunMGT3M60,ammo762mmBulletBall=300,h7sb_bumbag</set>
	<!-- 
	<set xpath="/entity_classes/entity_class[@name='playerMale']/property[starts-with(@name, 'ItemsOnEnterGame')]/@value">drinkJarBoiledWater=2,foodCanChili,medicalFirstAidBandage,meleeToolTorch,keystoneBlock,h7sb_bumbag</set> -->
	<!-- END -->
	<!-- Backpacks -->
	<!-- OK 08252023 -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='CarryCapacity']/@value">0</set>
	<!-- Death Penalties -->
	<!-- OK 08252023 -->
	<!-- The value below changes the deficit percentage of a level you acquire when you die. Game default is .25 (25%) -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='ExpDeficitPerDeathPercentage'][@value='.25']/@value">.25</set>
	<!-- This value is the maximum amount a player's deficit can be. By default it's .5, meaning a player can't go in "debt" for more than half a level's worth. -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='ExpDeficitMaxPercentage'][@value='.5']/@value">1</set>
	<insertAfter xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/triggered_effect[@trigger='onSelfRespawn' and @buff='buffStatusCheck01,buffStatusCheck02,buffPerkAbilityUpdate,buffNearDeathTraumaTrigger,buffDeathFoodDrinkAdjust']">
		<triggered_effect trigger="onSelfRespawn" action="ModifyStats" stat="Food" operation="set" value="50"/>
		<triggered_effect trigger="onSelfRespawn" action="ModifyStats" stat="Water" operation="set" value="50"/>
	</insertAfter>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/triggered_effect[@trigger='onSelfRespawn' and @buff='buffStatusCheck01,buffStatusCheck02,buffPerkAbilityUpdate,buffNearDeathTraumaTrigger,buffDeathFoodDrinkAdjust']/@buff">buffStatusCheck01,buffStatusCheck02,buffPerkAbilityUpdate</set>
	<!-- Wasteland Radiation -->
	<!-- OK 08252023 -->
	<append xpath="/entity_classes">
		<entity_class name="zombieMaleHazmatChallenge" extends="zombieMaleHazmat">
			<property name="UserSpawnType" value="Menu"/>
			<property name="Tags" value="entity,zombie,walker,feral,radiated"/>
			<property name="Mesh" value="@:Entities/Zombies/Prefabs/ZHazmatRadiated.prefab"/>
			<property name="WalkType" value="7"/>
			<property name="AINoiseSeekDist" value="6"/>
			<property name="AIPathCostScale" value=".65, .9"/>
			<!-- Gameplay zombieMaleHazmatRadiated -->
			<property name="MoveSpeedAggro" value=".5, 1.3"/>
			<property name="JumpMaxDistance" value=".5, .6"/>
			<property name="HandItem" value="meleeHandZombieHazMatFeral"/>
			<property name="DismemberMultiplierHead" value=".4"/>
			<property name="DismemberMultiplierArms" value=".4"/>
			<property name="DismemberMultiplierLegs" value=".4"/>
			<!-- Radiated -->
			<property name="PainResistPerHit" value=".9"/>
			<!-- Radiated -->
			<property name="ExperienceGain" value="1200"/>
			<property name="LootDropEntityClass" value="EntityLootContainerzombieMaleHazmat"/>
			<property name="LootDropProb" value="1"/>
			<!-- XP grunt radiated -->
			<effect_group name="Base Effects">
				<passive_effect name="HealthMax" operation="base_set" value="3000"/>
				<!--<passive_effect name="EntityDamage" operation="perc_add" value="0"/>-->
				<!-- Feral damage -->
				<triggered_effect trigger="onOtherDamagedSelf" action="ModifyCVar" target="self" cvar="RadiatedRegenAmount" operation="set" value="4.5"/>
				<triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" target="self" buff="buffRadiatedRegen"/>
			</effect_group>
		</entity_class>
		<entity_class name="EntityLootContainerzombieMaleHazmat">
			<property name="Class" value="EntityLootContainer"/>
			<property name="UserSpawnType" value="Console"/>
			<property name="Mesh" value="@:Entities/LootContainers/zpackRedPrefab.prefab"/>
			<property name="TintColor" value="FF0000"/>
			<property name="ModelType" value="Custom"/>
			<property name="Prefab" value="Backpack"/>
			<property name="Parent" value="Backpack"/>
			<property name="IsEnemyEntity" value="false"/>
			<property name="TimeStayAfterDeath" value="1200"/>
			<property name="LootListOnDeath" value="zzombieHazmat"/>
			<property name="Faction" value="none"/>
		</entity_class>
	</append>
	<!-- Bosses -->
	<!-- Taza's -->
	<!-- NG 08252023 -->
	<set xpath="/entity_classes/entity_class[@name='zombieSMGArlenePLUS']//passive_effect[@name='HealthMax']/@value">100</set>
	<set xpath="/entity_classes/entity_class[@name='zombieSMGArlenePLUS']/property[@name='LootDropEntityClass']/@value">EntityLootContainer_WRCTazas</set>
	<append xpath="/entity_classes/entity_class[@name='zombieSMGArlenePLUS']">
		<property name="LootDropProb" value="1"/>
	</append>
